@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentPortal</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/5.3.2/darkly/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Modern Sticky Footer Implementation */
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh; /* Ensures body is at least full screen height */
        }

        .content-wrapper {
            flex: 1 0 auto; /* Pushes everything below it (the footer) to the bottom */
        }

        /* Custom footer to avoid default 'footer' class conflicts */
        .layout-footer {
            flex-shrink: 0;
            background-color: #1a1a1a;
            border-top: 1px solid #444;
        }

        .navbar-brand {
            font-weight: 800;
            letter-spacing: -0.5px;
            cursor: default;
        }

        .nav-link:hover {
            color: #fff !important;
            background: rgba(255,255,255,0.1);
            border-radius: 5px;
        }

        .user-greeting {
            color: rgba(255,255,255,0.8);
            font-size: 0.9rem;
            align-self: center;
        }
    </style>
</head>
<body>
    <div class="content-wrapper">
        <header>
            <nav class="navbar navbar-expand-lg bg-primary mb-4 shadow-sm" data-bs-theme="dark">
                <div class="container">
                    <span class="navbar-brand mb-0 h1">
                        <i class="bi bi-mortarboard-fill me-2"></i>PORTAL
                    </span>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarMain">
                        <ul class="navbar-nav me-auto">
                            @{
                                var menuJson = HttpContextAccessor.HttpContext.Session.GetString("UserMenus");
                                if (!string.IsNullOrEmpty(menuJson))
                                {
                                    var menus = JsonConvert.DeserializeObject<List<dynamic>>(menuJson);
                                    foreach (var menu in menus)
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link px-3" href="@menu.Url">
                                                <i class="@menu.Icon me-1"></i> @menu.MenuName
                                            </a>
                                        </li>
                                    }
                                }
                            }
                        </ul>

                        @if (HttpContextAccessor.HttpContext.Session.GetInt32("UserId") != null)
                        {
                            <ul class="navbar-nav ms-auto">
                                <li class="nav-item d-flex align-items-center me-3">
                                    <span class="user-greeting">
                                        <i class="bi bi-person-circle me-1"></i>
                                        Hi, @HttpContextAccessor.HttpContext.Session.GetString("Username")
                                    </span>
                                </li>
                                <li class="nav-item">
                                    <a class="btn btn-outline-light btn-sm" href="/Candidate/Logout">
                                        <i class="bi bi-box-arrow-right me-1"></i> Logout
                                    </a>
                                </li>
                            </ul>
                        }
                    </div>
                </div>
            </nav>
        </header>

        <div class="container mb-5">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="layout-footer text-muted py-3">
        <div class="container text-center">
            &copy; 2026 - StudentPortal <span class="mx-2">|</span> <small>Adaptive Management System</small>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>